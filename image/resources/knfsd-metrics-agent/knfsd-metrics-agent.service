[Unit]
Description=Knfsd Metrics Agent
Requires=network.target
After=network.target

[Service]
Type=simple
Restart=always
RestartSec=10
ExecStart=/usr/local/bin/knfsd-metrics-agent --config /etc/knfsd-metrics-agent/common.yaml --config /etc/knfsd-metrics-agent/proxy.yaml

[Install]
WantedBy=multi-user.target
